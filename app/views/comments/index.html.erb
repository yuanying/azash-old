
<div class='comments'>
  <% @comments.each do |comment| %>
  <%= render :partial => 'comment', :locals => { :comment => comment } %>
  <% end %>
</div>


<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Url</th>
    <th>Body text</th>
    <th>Entry</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.name %></td>
    <td><%= comment.email %></td>
    <td><%= comment.url %></td>
    <td><%= comment.body_text %></td>
    <td><%= comment.entry %></td>
    <td><%= link_to 'Show', comment %></td>
    <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
    <td><%= link_to 'Destroy', comment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

